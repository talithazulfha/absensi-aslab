<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/stylesheets/output.css" rel="stylesheet" />
    <title><%= title %></title>
    <style>
        .add-user-btn {
            float: right;
            margin-top: 1rem;
        }
    </style>
</head>

<body class="bg-gray-100">

    <%- include('sidebar') %>

    <div class="min-h-screen flex items-center justify-center bg-gray-100" style="width: 90%; position: absolute; left: 10%; top: 15%;">
        <div class="bg-white p-6 rounded-lg shadow-lg" style="width: 80%; margin-top: 2rem;">
            <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= title %></h1>
            <a class="add-user-btn py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="/admin/pertemuan">
                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                Tambah Pertemuan
            </a>
            <table class="min-w-full bg-white mt-4">
                <thead>
                    <tr>
                        <th class="py-2 px-4 border-b-2 border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Pertemuan ID</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Nama Pertemuan</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Jenis Pertemuan</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Tanggal</th>
                        <th class="py-2 px-4 border-b-2 border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-600">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% pertemuanList.forEach(pertemuan => { %>
                        <tr>
                            <td class="py-2 px-4 border-b border-gray-200"><%= pertemuan.id %></td>
                            <td class="py-2 px-4 border-b border-gray-200"><%= pertemuan.namaPertemuan %></td>
                            <td class="py-2 px-4 border-b border-gray-200"><%= pertemuan.jenisPertemuan %></td>
                            <td class="py-2 px-4 border-b border-gray-200"><%= pertemuan.tanggal %></td>
                            <td class="py-2 px-4 border-b border-gray-200">
                                <a href="/admin/editPertemuan/<%= pertemuan.id %>"
                                   class="text-blue-600 hover:underline">
                                   Edit
                                </a>
                                |
                                <a href="/admin/delete/<%= pertemuan.id %>"
                                   class="text-red-600 hover:underline"
                                   onclick="return confirm('Are you sure you want to delete this pertemuan?');">
                                   Delete
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/preline.js"></script>
</body>

</html>
