<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="/stylesheets/output.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('sidebar') %>
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-lg" style="width: 70%; position: absolute; left: 20%; top: 15%;">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">Tambah Presensi Piket</h1>
                    <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
                        <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
                            <h2 class="text-xl font-semibold text-gray-800">Jadwal Piket</h2>
                            <a class="add-user-btn py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="/admin/daftarPiket">
                                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                                Add User
                            </a>
                </div>
            </div>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">No Anggota</span>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Nama</span>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Status</span>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Hari Piket</span>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Jam Masuk</span>
                            <th scope="col" class="px-6 py-3 text-start">
                                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Jam Keluar</span>
                            </th> 
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% listpiket.forEach(presensipiket => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm text-gray-500"><%= presensipiket.no_anggota  %></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="ml-4">
                                            <span class="block text-sm font-semibold text-gray-800"><%= presensipiket.nama_anggota %></span>
                                        </div>
                                    </div>
                                </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="py-1 px-1.5 inline-flex items-center gap-x-1 text-xs font-medium rounded-full"
                                            :class="'bg-teal-100 text-teal-800': presensipiket.status === 'active', 'bg-gray-300 text-gray-500': presensipiket.status === 'inactive'}">
                                            <%= presensipiket.status %>
                                        </span>
                                      </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm text-gray-500"><%= presensipiket.tanggal %></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm text-gray-500"><%= presensipiket.jam_masuk %></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm text-gray-500"><%= presensipiket.jam_keluar %></span>
                                </td>
                                <td class="py-2 px-4 border-b border-gray-200">
                                    <a href="/admin/editPresensiPiket/<%= presensipiket.id %>"
                                        class="text-blue-600 hover:underline">
                                        Edit
                                    </a>

                                 <a href="/admin/delete/<%= presensipiket.id %>"
                                    class="text-red-600 hover:underline"
                                    onclick="return confirm('Are you sure you want to delete this pertemuan?');">
                                    Delete
                                 </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>

            <!-- Footer -->
            <div class="px-6 py-4 flex justify-between items-center border-t border-gray-200">
                <p class="text-sm text-gray-600">
                    <span class="font-semibold text-gray-800"></span> results
                </p>
                <div class="inline-flex gap-x-2">
                    <button type="button" class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="m15 18-6-6 6-6" />
                        </svg>
                        Prev
                    </button>
                    <button type="button" class="py-1.5 px-2 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none">
                        Next
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="m9 18 6-6-6-6" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>

<script src="/preline.js"></script>
</body>
</html>

